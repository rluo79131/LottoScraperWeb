@model List<LottoScraperWeb.DAL.Information>

<style>
    th {
        background-color: yellow
    }

    th, td {
        text-align: center
    }
</style>

<form>
    <div class="form-group">
        <h3><b>爬取資料</b></h3>
        <a href="@Url.Action("Scraper")" class="btn btn-primary">啟動</a>
    </div>
    <br />
    <div class="form-group">
        <h3><b>資料結果</b></h3>
        <table class="table table-bordered">
            <thead>
                <tr class="info">
                    <th scope="col">期別</th>
                    <th scope="col">開獎日</th>
                    <th scope="col">兌獎截止</th>
                    <th scope="col">銷售金額</th>
                    <th scope="col">獎金總額</th>
                    <th scope="col">獎號</th>
                    <th scope="col">特別號</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var data in Model)
                    {
                        <tr style="background-color:white">
                            <td>@data.DrawTerm</td>
                            <td>@data.DDate</td>
                            <td>@data.EDate</td>
                            <td>@data.SellAmount</td>
                            <td>@data.Total</td>
                            <td>@data.SNoList</td>
                            <td>@data.No</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</form>